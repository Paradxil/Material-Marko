						if(item.icon)
		        	i class="material-icons mdc-list-item__graphic" aria-hidden="true" -- ${item.icon}
						if(item.text)
		        	span class="mdc-list-item__text" -- ${item.text}
						if(item.renderBody)
							<${item.renderBody}/>
